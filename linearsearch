// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
       
    int i,key,n;
    cout<<"Enter the size of array";
    cin>>n;
    int arr[n];
    cout<<"Enter the "<<n<<"value to array";
    
    for(i=0; i<n; i++)
    {
        cin>>arr[i];
    }
    
    cout<<"Enter the value to search";
    cin>>key;
    
     for(i=0; i<n; i++)
    {
        if(arr[i]==key)
        {
            cout<<"value found at"<<i;
            break;
        }
    }
    
    if(i==n){
        cout<<"Value not found";
    }
    return 0;
}
